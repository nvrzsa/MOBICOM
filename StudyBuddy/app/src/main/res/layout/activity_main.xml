<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/mainTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to StudyBuddy"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="48dp" />

    <Button
        android:id="@+id/viewProgressButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="View Progress Dashboard"
        app:layout_constraintTop_toBottomOf="@id/mainTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <Button
        android:id="@+id/startTimerButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Start Pomodoro Timer"
        app:layout_constraintTop_toBottomOf="@id/viewProgressButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="75dp" />

    <Button
        android:id="@+id/viewAnalyticsButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="View Analytics"
        app:layout_constraintTop_toBottomOf="@id/startTimerButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/viewRewardsButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="View Rewards"
        app:layout_constraintTop_toBottomOf="@id/viewAnalyticsButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/exitButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Exit"
        app:layout_constraintTop_toBottomOf="@id/viewRewardsButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="75dp" />


</androidx.constraintlayout.widget.ConstraintLayout>
